    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_movies"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/rl_justice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_red">

        <ImageView
            android:id="@+id/iv_justice"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_justice_resize2" />

        <TextView
            android:id="@+id/tv_justice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_justice"
            android:text="Justice League"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_justice"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_justice"
            android:text="(Action,Science Fiction,Adventure)"
            android:textColor="@color/primary_text"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_justice"
            android:text="Current Popularity"
            android:textColor="@color/primary_text"
            android:textSize="16dp" />

        <RatingBar
            android:id="@+id/rb_ratting"
            style="@style/RattingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_current"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_justice"
            android:rating="5" />


